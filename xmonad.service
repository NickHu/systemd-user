[Unit]
Description=Xmonad service
Before=xinit.target
After=xorg.target
Requires=xorg.target

[Service]
#Environment=DISPLAY=:0
#Environment=XDG_RUNTIME_DIR=/run/user/1004
#Environment=DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1004/dbus/user_bus_socket
ExecStart=/usr/bin/xmonad
Restart=always
RestartSec=10
 
[Install]
WantedBy=xmonad.target
